<% provide(:title, "Ratings") %>
<div class="centerBackground">
<h1>Evaluations</h1>
<p>Find me in app/views/user_static_pages/ratingPage.html.erb</p>


 <h2>New Rating for <%#@selected_user.u_name%> </h2>


  <form action="/addEval" method="post">



   <div class="form-group">
        <label for="eval[pname]">Evaluation Rating (between 1 and 10)</label>
    <input class="form-control" type="number" min = "1" max = "10" placeholder="Enter Evaluation Rating" name="eval[rating]" required>
    </div>
    <div class="form-group">
      <label for="eval[comments]">Comments</label>
          <textarea class="form-control" type="text" placeholder="Add comments..." name="eval[comments]" required></textarea>
    </div>

    <div class="addButton"> 
        <button type="submit" class ="submitBtn">Add Evaluation</button>
    </div>

</form>
</div>

<%= render 'layouts/footer' %>
