
<header>
<%= render 'layouts/header' %>
</header>

<div class="centerBackground">


<h1>Current Students</h1>

<%= link_to_primary_button 'Back to Projects', projects_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.u_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to_button 'Edit', edit_user_path(user) %></td>
            <td><a href=<%= user_path(user)%> class="btn btn-danger btn-lg btn-block" data-confim="Are you sure?" data-method="delete" rel="nofollow">Delete</a></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
<%= render 'layouts/footer' %>