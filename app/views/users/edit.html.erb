<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Edit <%= @user.u_name %></h1>

<% flash.each do |message_type, message| %>       
    <div><%= message %></div>    
  <% end %>

  <form action=<%= user_path(@user) %> method="post">
    <input name="_method" type="hidden" value="patch"/>

    <div class="form-group">
        <label for="uname">User Name</label>
        <input type="text" class="form-control" name="user[u_name]" value="<%= @user.u_name %>" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="user[email]" value="<%= @user.email %>" required>
        Email must be in name.#@osu.edu format
    </div>

    <div class="form-group"> 
        <label for="password">Password</label>
    <input type=hidden class="form-control" name="user[password]" value=<%= @user.password %> required>
    Password must be at least 8 characters
    <div>
    
    <div class="addButton"> 
        <button type="submit" class="btn btn-danger">Save Changes</button>
    </div>
 
</form>
</div>
<%# render 'layouts/footer' %>