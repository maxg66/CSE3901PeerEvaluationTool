<header>
<%= render 'layouts/header' %>
</header>

<div class="centerBackground">

<h1><%= @selected_project.p_name %> Groups</h1>

<%= link_to_primary_button 'Create New Group', new_group_path %>
<%= link_to_primary_button 'Add Existing Group to ' + @selected_project.p_name, findAvailableGroups_path %>


<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

    <tbody>
        <% @selected_project.groups.each do |group| %>
        <tr>
            <td> <%=link_to_button group.g_name, usersInGroup_path(:selected_group => group.id)%>
            <td><%= link_to_button 'Edit', edit_group_path(group) %></td>
            <td><a href=<%= group_path(group)%> class="btn btn-danger btn-lg btn-block" data-confim="Are you sure?" data-method="delete" rel="nofollow">Delete</a></td>
        </tr>
        <% end %>
    </tbody>
</table>

</div>

<%= render 'layouts/footer' %>