<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Edit <%= @group.g_name %></h1>

<% flash.each do |message_type, message| %>       
    <div><%= message %></div>    
  <% end %>

<form action=<%= group_path(@group) %> method="post">
    <input name="_method" type="hidden" value="patch"/>

    <div class="form-group">
        <label for="group[gname]">Group Name</label>
        <input type="text" class="form-control" name="group[g_name]" value="<%= @group.g_name %>" required>
    </div>
    
    <div class="addButton"> 
        <button type="submit" class="btn btn-danger">Save Changes</button>
    </div>
 
</form>
</div>
<%# render 'layouts/footer' %>
