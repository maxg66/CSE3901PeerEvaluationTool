
<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Edit <%= @project.p_name %></h1>

<% flash.each do |message_type, message| %>       
    <div><%= message %></div>    
  <% end %>

<form action=<%= project_path(@project) %> method="post">
    <input name="_method" type="hidden" value="patch"/>
    <div class="form-group">
        <label for="project[pname]">Project Name</label>
        <input type="text" class="form-control" name="project[p_name]" value="<%= @project.p_name %>" required>
    </div>
    <div class="form-group">
        <label for="project[ptype]">Project Type</label>
        <input type="text" class="form-control" name="project[project_type]" value="<%= @project.project_type %>" required>
    </div>

    <div class="form-group"> 
        <label for="project[pduedate]">Due Date</label>
        <input type="date" class="form-control" name="project[due_date]" value=<%= @project.due_date %> required>
    <div>
    
    <div class="addButton"> 
        <button type="submit" class="btn btn-danger">Save Changes</button>
    </div>
</form>
</div>
<%# render 'layouts/footer' %>