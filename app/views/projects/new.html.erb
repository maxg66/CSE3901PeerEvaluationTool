
<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Add Project</h1>

<% flash.each do |message_type, message| %>       
    <div><%= message %></div>    
  <% end %>

<form action="/projects" method="post">
    <div class="form-group">
        <label for="project[pname]">Project Name</label>
        <input type="text" class="form-control" placeholder="Enter Project Name" name="project[p_name]" required>
    </div>
    <div class="form-group">
        <label for="project[ptype]">Project Type</label>
        <input type="text" class="form-control" placeholder="Enter Project Type" name="project[project_type]" required>
    </div>

    <div class="form-group"> 
        <label for="project[pduedate]">Due Date</label>
        <input type="date" class="form-control" placeholder="Enter Project Due Date" name="project[due_date]" required>
    <div>
    
    <div class="addButton"> 
        <button type="submit" class="btn btn-danger">Add Group</button>
    </div>
</form>
</div>
<%= render 'layouts/footer' %>
