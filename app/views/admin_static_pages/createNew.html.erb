<% provide(:title, "CreateNew") %>
<h1>Create New Students and Groups</h1>
<p>Find me in app/views/admin_static_pages/createNew.html.erb</p>

<form>

  <h2><%= link_to "Add User", addMember_path %></h2>
  
  <div class="container">

    <label for="uname"><b>User Name</b></label>
    <div>
    <input type="text" placeholder="User Name" name="uname" required>
    
    <div class="space">

    <label for="email"><b>Email</b></label>
    <div>
    <input type="text" placeholder="Email" name="email" required>
    
    <div class="space">   

    <label for="password"><b>Password</b></label>
    <div>
    <input type="text" placeholder="Password" name="password" required>

    <div class="space">

    <label for="aType"><b>Account Type</b></label>
    <div>
    <input type="text" placeholder="Admin or User" name="aType" required>
    
    <div class="space">      
    
    <button type="submit">Add</button>
 
  </div>

</form>
   
<form>
 

  <h2>Create New Group</h2>
  <label for="gName"><b>Group Name</b></label>
 <div>
  <input type="text" placeholder="Group Name" name="gName" required>
     <div class="space">    
    <button type="submit">Create</button>
 
</form>

<form>
    <h2>Add to Group</h2>
    <label for="uName"><b>User Name</b></label>
    <div>
    <input type="text" placeholder="Student Name" name="sname" required>
        <div class="space">    
        
    <tbody>
            <% @admin_groups.each do |group| %>
            
            <tr>
                <input type="radio" id="gName" value="groupName">
                <label for="groupName"><%= link_to group.g_name,  admin_static_pages_groupMemberPage_path  %></label><br>
            </tr>
            <% end %>
        </tbody>

        <button type="submit">Add to Group</button>

</form>
