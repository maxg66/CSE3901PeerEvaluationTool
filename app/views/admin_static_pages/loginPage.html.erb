<% provide(:title, "Login") %>
<body>

<h1>Peer Evaluation Tool Login</h1>

<% flash.each do |message_type, message| %>       
  <div><%= message %></div>    
<% end %>

<form action="/loginVal" method="post">

  <div class="container">
    <label for="login[uname]"><b>OSU Email</b></label>
    <div>
    <input type="text" placeholder="Enter Email" name="login[email]" required>
    
 <div class="space">
<label for="login[psw]"><b>Password</b></label>
   <div>
    <input type="password" placeholder="Enter Password" name="login[psw]" required>
     <div class="space">    
    <button type="submit">Login</button>
 
  </div>
 
</form>

</body>