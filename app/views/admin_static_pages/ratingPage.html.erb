<% provide(:title, "Ratings") %>
<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Evaluations for <%=@selected_user.u_name%></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Rating</th>
      <th>Content</th>
    </tr>
  </thead>

    <tbody>
        <%= @selected_user.evaluations.each do |eval| %>
        <tr>
            <td><%= @user_projects.find(eval.project_id).p_name %></td>
            <td><%= eval.rating %></td>
            <td><%= eval.content %></td>
        </tr>
        <% end %>
    </tbody>
</table>

</div>