<header>
<%= render 'layouts/header' %>
</header>
<div class="centerBackground">

<h1>Edit <%= @admin.a_name %></h1>

<% flash.each do |message_type, message| %>       
    <div><%= message %></div>    
<% end %>

<form action=<%= admin_path(@admin) %> method="post">
    <input name="_method" type="hidden" value="patch"/>

        <div class="form-group">
            <label for="aname">User Name</label>
            <input type="text" class="form-control" name="admin[a_name]" value="<%= @admin.a_name %>" required>
        </div>
        <div class="form-group">
            <label for="aemail">Email</label>
            <input type="text" class="form-control" name="admin[a_email]" value="<%= @admin.a_email %>" required>
            Email must be in name.#@osu.edu format
        </div>

        <div class="form-group"> 
            <label for="apassword">Password</label>
        <input type=hidden class="form-control" placeholder="Enter Password" name="admin[a_password]" value=<%= @admin.a_password %> required>
        Password must be at least 8 characters
        <div>
        
        <div class="addButton"> 
            <button type="submit" class="btn btn-danger">Save Changes</button>
    </div>
 
</form>
</div>
<%# render 'layouts/footer' %>