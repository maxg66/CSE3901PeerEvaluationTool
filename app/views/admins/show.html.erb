<header>
<%= render 'layouts/header' %>
</header>

<div class="centerBackground">

<p>
  <%= notice %>
  <strong>Name:</strong>
  <%= @admin.a_name %>
</p>

<% flash.each do |message_type, message| %>      
  <div><%= message %></div>    
<% end %>

<p>
<strong>Email:</strong>
  <%= @admin.a_email %>
</p>

<button type="button" class ="submitBtn"><%= link_to 'Create Another Admin', new_admin_path %></button>
<button type="button" class ="submitBtn"><%= link_to 'Projects', projects_path %></button>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Current Admins</th>
      <th>Email</th>
    </tr>
  </thead>

    <tbody>
        <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.a_name %></td>
            <td><%= admin.a_email %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
<%= render 'layouts/footer' %>